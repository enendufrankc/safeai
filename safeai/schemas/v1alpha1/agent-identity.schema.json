{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://safeai.dev/schemas/v1alpha1/agent-identity.schema.json",
  "title": "SafeAI Agent Identity Schema (v1alpha1)",
  "description": "Schema for SafeAI agent identity declarations used for action-boundary binding.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "const": "v1alpha1"
    },
    "agent": {
      "$ref": "#/$defs/agent"
    },
    "agents": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/agent"
      }
    }
  },
  "oneOf": [
    {
      "required": [
        "agent"
      ]
    },
    {
      "required": [
        "agents"
      ]
    }
  ],
  "$defs": {
    "tagList": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9_.-]*$"
      }
    },
    "stringList": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "agent": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "agent_id"
      ],
      "properties": {
        "agent_id": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "tools": {
          "$ref": "#/$defs/stringList"
        },
        "clearance_tags": {
          "$ref": "#/$defs/tagList"
        }
      }
    }
  }
}
