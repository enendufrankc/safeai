{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://safeai.dev/schemas/v1alpha1/tool-contract.schema.json",
  "title": "SafeAI Tool Contract Schema (v1alpha1)",
  "description": "Schema for SafeAI tool contracts used by action boundary enforcement.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "const": "v1alpha1"
    },
    "contract": {
      "$ref": "#/$defs/contract"
    },
    "contracts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/contract"
      }
    }
  },
  "oneOf": [
    {
      "required": [
        "contract"
      ]
    },
    {
      "required": [
        "contracts"
      ]
    }
  ],
  "$defs": {
    "tagList": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9_.-]*$"
      }
    },
    "fieldList": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "ioContract": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tags": {
          "$ref": "#/$defs/tagList"
        },
        "fields": {
          "$ref": "#/$defs/fieldList"
        }
      }
    },
    "stores": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "fields": {
          "$ref": "#/$defs/fieldList"
        },
        "retention": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "sideEffects": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "reversible",
        "requires_approval"
      ],
      "properties": {
        "reversible": {
          "type": "boolean"
        },
        "requires_approval": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "contract": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "tool_name",
        "accepts",
        "emits",
        "side_effects"
      ],
      "properties": {
        "tool_name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "accepts": {
          "$ref": "#/$defs/ioContract"
        },
        "emits": {
          "$ref": "#/$defs/ioContract"
        },
        "stores": {
          "$ref": "#/$defs/stores"
        },
        "side_effects": {
          "$ref": "#/$defs/sideEffects"
        }
      }
    }
  }
}

